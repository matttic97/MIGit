<UserControl
    x:Class="ŠKL.EkipaUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ŠKL"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <DataTemplate x:Key="predlogaIgralca">
            <TextBlock>
                <Run Text="{Binding Ime}"/>
                <Run Text="#"/>
                <Run Text="{Binding Stevilka}"/>
            </TextBlock>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Border BorderBrush="Blue" BorderThickness="2" CornerRadius="6" Margin="0,0,40,0">
            <StackPanel Margin="20">
                <TextBlock Text="{Binding ImeEkipe}" FontSize="20" Margin="0,20,0,0"/>
                <TextBlock Text="Začetna postavitev"/>
                <ListView ItemsSource="{Binding Starters}" ItemTemplate="{StaticResource predlogaIgralca}" Margin="0,20,0,0">
                    
                </ListView>
                <TextBlock Text="Klop"/>
                <ListView ItemsSource="{Binding Klop}" ItemTemplate="{StaticResource predlogaIgralca}" Margin="0,20,0,0">

                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
